{%- set osarch = salt['grains.get']('osarch') %}
{% set version = '0.1.7' %}
{%- load_yaml as base_defaults %}
Debian:
  pkgurl: https://github.com/Graylog2/collector-sidecar/releases/download/{{ version }}/collector-sidecar_{{ version }}-1_{{ osarch }}.deb
  service: collector-sidecar.service
RedHat:
  pkgurl: https://github.com/Graylog2/collector-sidecar/releases/download/{{ version }}/collector-sidecar_{{ version }}-1.{{ osarch }}.rpm
  service: collector-sidecar.service
Suse:
  pkgurl: https://github.com/Graylog2/collector-sidecar/releases/download/{{ version }}/collector-sidecar_{{ version }}-1.{{ osarch }}.rpm
  service: collector-sidecar.service
{%- endload %}

{%- set sidecar = salt['grains.filter_by'](base_defaults, merge=salt['pillar.get']('graylog:sidecar')) %}
